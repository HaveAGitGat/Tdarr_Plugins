{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "class-methods-use-this": 0,
        "no-case-declarations": 0,
        "camelcase": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "max-len": [
          "error",
          {
            "code": 120
          }
        ]
      }
}